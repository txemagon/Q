<p id="notice"><%= notice %></p>

<h1>Listing Scopes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Parent</th>
      <th>Depth</th>
      <th>Children count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scopes.each do |scope| %>
      <tr>
        <td><%= scope.name %></td>
        <td><%= scope.parent_name %></td>
        <td><%= scope.depth %></td>
        <td><%= scope.children_count %></td>
        <td><%= link_to 'Show', scope %></td>
        <td><%= link_to 'Edit', edit_scope_path(scope) %></td>
        <td><%= link_to 'Destroy', scope, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

